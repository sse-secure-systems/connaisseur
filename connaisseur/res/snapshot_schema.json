{
    "type": "object",
    "properties": {
        "signed": {
            "type": "object",
            "properties": {
                "_type": {
                    "type": "string",
                    "enum": [
                        "Snapshot"
                    ]
                },
                "expires": {
                    "type": "string",
                    "format": "date-time"
                },
                "version": {
                    "type": "integer"
                },
                "meta": {
                    "type": "object",
                    "patternProperties": {
                        "^(root|targets(/([a-z\\d][a-z\\d_-]*))?)$": {
                            "type": "object",
                            "properties": {
                                "hashes": {
                                    "type": "object",
                                    "properties": {
                                        "sha256": {
                                            "type": "string",
                                            "pattern": "^(?:[A-Za-z0-9+/]{4})*(?:[A-Za-z0-9+/]{2}==|[A-Za-z0-9+/]{3}=)?$"
                                        },
                                        "sha512": {
                                            "type": "string",
                                            "pattern": "^(?:[A-Za-z0-9+/]{4})*(?:[A-Za-z0-9+/]{2}==|[A-Za-z0-9+/]{3}=)?$"
                                        }
                                    }
                                },
                                "length": {
                                    "type": "integer"
                                }
                            }
                        }
                    },
                    "additionalProperties": false
                }
            },
            "required": [
                "_type",
                "expires",
                "version",
                "meta"
            ]
        },
        "signatures": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "keyid": {
                        "type": "string",
                        "pattern": "^[a-f\\d]{64}$"
                    },
                    "method": {
                        "type": "string",
                        "enum": [
                            "ecdsa"
                        ]
                    },
                    "sig": {
                        "type": "string",
                        "pattern": "^(?:[A-Za-z0-9+/]{4})*(?:[A-Za-z0-9+/]{2}==|[A-Za-z0-9+/]{3}=)?$"
                    }
                },
                "required": [
                    "keyid",
                    "method",
                    "sig"
                ]
            }
        }
    },
    "required": [
        "signed",
        "signatures"
    ]
}
