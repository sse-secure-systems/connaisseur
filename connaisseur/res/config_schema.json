{
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "name": {
                "type": "string",
                "pattern": "^[^\/\\\\]+$"
            },
            "type": {
                "type": "string",
                "enum": [
                    "notaryv1",
                    "notaryv2",
                    "cosign",
                    "static"
                ]
            }
        },
        "required": [
            "name",
            "type"
        ],
        "allOf": [
            {
                "if": {
                    "properties": {
                        "type": {
                            "const": "notaryv1"
                        }
                    }
                },
                "then": {
                    "properties": {
                        "host": {
                            "type": "string",
                            "pattern": "[-a-zA-Z0-9@:%._\\+~#=]{1,256}\\.[a-zA-Z0-9()]{1,6}"
                        },
                        "pub_keys": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "key": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "name",
                                    "key"
                                ]
                            },
                            "minItems": 1,
                            "uniqueItems": true
                        },
                        "is_acr": {
                            "type": "boolean"
                        },
                        "cert": {
                            "type": "string",
                            "pattern": "(?:-+BEGIN\\sCERTIFICATE[-]+)\n(?:(?:[A-Za-z0-9+\/\\s])*={0,4})\n(?:-+END\\sCERTIFICATE[-]+)"
                        },
                        "auth": {
                            "type": "object",
                            "oneOf": [
                                {
                                    "properties": {
                                        "user": {
                                            "type": "string"
                                        },
                                        "password": {
                                            "type": "string"
                                        }
                                    },
                                    "required": [
                                        "user",
                                        "password"
                                    ]
                                },
                                {
                                    "properties": {
                                        "secretName": {
                                            "type": "string"
                                        }
                                    },
                                    "required": [
                                        "secret_name"
                                    ]
                                }
                            ]
                        }
                    },
                    "required": [
                        "host",
                        "pub_keys"
                    ]
                }
            },
            {
                "if": {
                    "properties": {
                        "type": {
                            "const": "notaryv2"
                        }
                    }
                },
                "then": {}
            },
            {
                "if": {
                    "properties": {
                        "type": {
                            "const": "cosign"
                        }
                    }
                },
                "then": {
                    "properties": {
                        "pub_keys": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "key": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "name",
                                    "key"
                                ]
                            },
                            "minItems": 1,
                            "uniqueItems": true
                        }
                    },
                    "required": [
                        "pub_keys"
                    ]
                }
            },
            {
                "if": {
                    "properties": {
                        "type": {
                            "const": "static"
                        }
                    }
                },
                "then": {
                    "properties": {
                        "approve": {
                            "type": "boolean"
                        }
                    },
                    "required": ["approve"]
                }
            }
        ]
    },
    "minItems": 1,
    "uniqueItems": true
}