                  "bearer"
                ]
              },
              "receiver_authentication_basic": {
                "type": "object",
                "properties": {
                  "username_env": {
                    "type": "string"
                  },
                  "password_env": {
                    "type": "string"
                  },
                  "authorization_prefix": {
                    "type": "string"
                  }
                },
                "required": [
                  "username_env",
                  "password_env"
                ]
              },
              "receiver_authentication_bearer": {
                "type": "object",
                "oneOf": [
                  {"required": ["token_file"]},
                  {"required": ["token_env"]}
                ],
                "properties": {
                  "authorization_prefix": {
                    "type": "string"
                  },
                  "token_file": {
                    "type": "string"
