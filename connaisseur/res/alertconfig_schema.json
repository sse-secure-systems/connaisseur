            },
            "anyOf": [
              {
                "properties": {
                  "receiver_authentication_type": {
                    "const": "basic"
                  }
                },
                "required": [
                  "receiver_authentication_basic"
                ]
              },
              {
                "properties": {
                  "receiver_authentication_type": {
                    "const": "bearer"
                  }
                },
                "required": [
